.container
  .col-md-6
    = form_for resource, :as => resource_name, :url => registration_path(resource_name), :id => 'registration-form', :class => 'form', :role => 'form' do |f|
      %fieldset
        %legend
          Sign up
          %span.spain Contratar

        = devise_error_messages!
        = render :partial => 'layouts/messages'

        .form-group
          = f.email_field :email, :placeholder => 'Email address / Correo Electrónico', :class => 'form-control'
        .form-group
          = f.password_field :password, :placeholder => 'Password / Contraseña', :class => 'form-control'
        .form-group
          = f.password_field :password_confirmation, :placeholder => 'Password confirm / Confirmar contraseña', :class => 'form-control'

        .form-group
          = f.submit 'SIGN UP / CONTRATAR', :class => 'btn btn-default btn-block'

        = render "devise/shared/links"