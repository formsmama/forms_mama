.container
  .col-md-3
    %fieldset
      %legend Sign in

      -#= render :partial => 'layouts/messages'

      = form_for resource, :as => resource_name, :url => session_path(resource_name), :class => 'form', :role => 'form' do |f|
        .form-group
          = f.email_field :email, :autofocus => true, :placeholder => 'Email address', :class => 'form-control'
        .form-group
          = f.password_field :password, :placeholder => 'Password', :class => 'form-control'
        .form-group
          = f.submit 'SIGN IN', :class => 'btn btn-default btn-block'

        - if devise_mapping.rememberable?
          .form-group.checkbox
            %label
              = f.check_box :remember_me
              Remember me

      = render "devise/shared/links"