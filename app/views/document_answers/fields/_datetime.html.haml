.container
  = render :partial => 'render_text', :locals => { :answer => answer }
  - if answer.template_field.field_type.match /date_without_day/
    .col-md-12.input-group{ 'data-date-format' => 'MM/DD/YYYY', :class => answer.template_field.field_type }
      = a.hidden_field :answer, :value => answer.answer
  - elsif answer.template_field.field_type.match /date_after_born/
    .col-md-12.input-group{ 'data-date-format' => 'MM/DD/YYYY', :class => answer.template_field.field_type, :locals => { :date => TemplateField.find(answer.template_field.header_ids.to_i).document_answers.where(:document_id => answer.document.id, :toggler_offset => (answer.toggler_offset / 1000) * 1000).first.answer } }
      = a.hidden_field :answer, :value => answer.answer
  - elsif answer.template_field.field_type.match /only_year_born/
    .col-md-12.input-group{ 'data-date-format' => 'MM/DD/YYYY', :class => answer.template_field.field_type }
      = a.hidden_field :answer, :value => answer.answer
  - elsif answer.template_field.field_type.match /only_year/
    .col-md-12.input-group{ 'data-date-format' => 'MM/DD/YYYY', :class => answer.template_field.field_type }
      = a.hidden_field :answer, :value => answer.answer
  - elsif answer.template_field.field_type.match /day_of_week/
    .col-md-12.input-group{ :class => answer.template_field.field_type }
      = a.hidden_field :answer, :value => answer.answer
  - else
    .col-md-12.input-group{ 'data-date-format' => (answer.template_field.field_type == 'date' ? 'MM/DD/YYYY' : 'H:mm'), :class => answer.template_field.field_type }
      = a.hidden_field :answer, :value => answer.answer || ('1:00 AM' if answer.template_field.field_type != 'date')

.col-md-12
  %br