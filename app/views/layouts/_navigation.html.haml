.navbar{ :role => 'navigation' }
  .container

    .navbar-header
      = link_to 'Forms Mama', root_path, :class => 'navbar-brand'

    .collapse.navbar-collapse
      - unless controller_name == 'sessions'
        %ul.nav.navbar-nav.navbar-right

          %li
            = link_to pdf_files_path do
              Documents /
              %span.spain Documentos

          %li
            = link_to templates_path do
              Templates
              %span.spain Plantillas

          %li
            - if user_signed_in?
              = link_to destroy_user_session_path, :method => :delete do
                Sign out
                %span.spain Cerrado la sesión
            - else
              = link_to new_user_session_path do
                Sign in /
                %span.spain Inciar sesión
    %h4
      A unique online multilingual Self-Help forms site
      .spain Un sitio único y multilingüe de solicitudes de auto ayuda