.jumbotron
  .container
    %h2 Your documents

.container
  - if @documents.blank?
    %h5 You have no documents...
  - else
    %table.table
      %thead
        %tr
          %td
            %h4 Documents
          %td
            %h4 Actions

      - @documents.each do |document|
        %tr
          %td
            %h5
              = document
              %i= " (#{ document.template.to_s })"
          %td
            = link_to document_answer_path(document, 1), :class => 'btn btn-default' do
              .glyphicon.glyphicon-edit
              Edit

            - if document.is_generated?
              - if current_user.paypal_payment_id.present?
                &nbsp
                = link_to download_pdf_path(document.id), :class => 'btn btn-primary' do
                  .glyphicon.glyphicon-cloud-download
                  Download

              - else
                = link_to new_paypal_payment_path, :class => 'btn btn-primary modal_remote',
                  'data-target' => '#modal_window', 'data-toggle' => 'modal' do
                  .glyphicon.glyphicon-cloud-download
                  Pay to Download
