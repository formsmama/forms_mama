.jumbotron
  .container
    %h3
      Your documents /
      %span.spain Tus documentos

.container
  - if @documents.blank?
    %h4
      You have no Documents /
      %span.spain No hay Documentos
  - else
    %table.table
      %thead
        %tr
          %td
            %h4
              Documents /
              %span.spain Documentos
          %td

      - @documents.each do |document|
        %tr
          %td
            %h5
              = document.to_s.split('<spain/>').first
              %span.spain= document.to_s.split('<spain/>').last
          %td
            = link_to document_review_path(document), :class => 'btn btn-default' do
              .glyphicon.glyphicon-list-alt
              Review /
              %span.spain Revisar
          %td
            / = link_to document_answer_path(document, 1), :class => 'btn btn-default' do
            /   .glyphicon.glyphicon-edit
            /   Edit /
            /   %span.spain Editar
            = link_to 'Create Filed Case', template_documents_path(:document_id => document.id, :template_id => 2), :method => :post, :class => 'btn btn-default'
            - if document.is_generated?
              - if current_user
                - if current_user.paypal_payment_id.present?
                  = render :partial => 'link_to_documents', :locals => { :document => document }

                - else
                  = link_to new_paypal_payment_path, :class => 'btn btn-primary modal_remote',
                    'data-target' => '#modal_window', 'data-toggle' => 'modal' do
                    .glyphicon.glyphicon-cloud-download
                    Pay to Download /
                    %span Pagar por descargar
                = render :partial => 'link_to_documents', :locals => { :document => document }

              - else
                = link_to new_user_session_path, :class => 'btn btn-primary modal_remote',
                  'data-target' => '#modal_window', 'data-toggle' => 'modal' do
                  .glyphicon.glyphicon-pencil
                  Sign In /
                  %span Iniciar sesi√≥n


            - if document.sub_documents.present?
              - document.sub_documents.each do |sub_document|
                %tr
                  %td
                    %h5
                      = sub_document.to_s.split('<spain/>').first
                      %span.spain= sub_document.to_s.split('<spain/>').last
                  %td
                    = link_to document_answer_path(sub_document, 1), :class => 'btn btn-default' do
                      .glyphicon.glyphicon-edit
                      Edit /
                      %span.spain Editar
                    - if sub_document.is_generated?
                      = link_to 'Affidative/Acceptance', download_pdf_path("AffidativeAcceptance_of_service_#{ sub_document.id }"), :class => 'btn btn-primary'
