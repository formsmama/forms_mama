.jumbotron
  .container
    %h3
      Recent documents /
      %span.spain Documentos recientes

    - if @documents.present?
      %h2.text-muted
        - if user_signed_in?
          Welcome Back /
          %span.spain Gracias por volver
      - @documents.each do |document|
        = link_to document_answer_path(document, 1) do
          = document.to_s.split('<spain/>').first
          %span.spain= document.to_s.split('<spain/>').last
        %br
    - else
      You have no documents filed recently
      %hr
      .spain No hay documentos presentados recientemente

.container
  - @templates.each_with_index do |template, index|
    - if index % 3 == 0
      .row
    .col-md-4
      %h3
      %p= link_to 'Complaint for Divorce / Demanda de Divorcio >>', template_documents_path(template), :class => 'btn btn-default', :method => :post